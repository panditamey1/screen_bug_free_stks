{
  "manifest_version": 3,
  "name": "Screener Save HTML",
  "description": "Save screener.in page HTML with title as filename",
  "version": "1.0",
  "permissions": ["downloads", "scripting", "activeTab"],
  "action": {
    "default_title": "Save Screener HTML"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://*.screener.in/*"]
}
